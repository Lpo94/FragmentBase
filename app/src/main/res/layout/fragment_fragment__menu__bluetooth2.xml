<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/btnVisListe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/deviceListView"
        android:layout_alignLeft="@+id/Server_button"
        android:layout_alignStart="@+id/Server_button"
        android:layout_marginBottom="12dp"
        android:background="@drawable/buttons"
        android:text="Show Paired Devices" />

    <Button
        android:id="@+id/btnDiscover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnVisListe"
        android:layout_alignBottom="@+id/btnVisListe"
        android:layout_toLeftOf="@+id/btnBack"
        android:layout_toStartOf="@+id/btnBack"
        android:background="@drawable/buttons"
        android:text="Discover" />

    <Button
        android:id="@+id/btnScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan"
        android:layout_alignBaseline="@+id/btnVisListe"
        android:layout_alignBottom="@+id/btnVisListe"
        android:layout_toRightOf="@+id/btnBack" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_alignBaseline="@+id/BackM_button"
        android:layout_alignBottom="@+id/BackM_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/Server_button"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:background="@drawable/buttons"
        android:text="Make a server"
        android:layout_above="@+id/Pair_button"
        android:layout_toLeftOf="@+id/deviceListView"
        android:layout_toStartOf="@+id/deviceListView"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="54dp" />

    <Button
        android:id="@+id/Connect_button"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:background="@drawable/buttons"
        android:text="Connect to server"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Server_button"
        android:layout_alignStart="@+id/Server_button"
        android:layout_marginTop="14dp" />

    <Button
        android:id="@+id/Pair_button"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/buttons"
        android:text="Pair your bluetooth"
        android:layout_alignBottom="@+id/btnStartGame"
        android:layout_alignLeft="@+id/Server_button"
        android:layout_alignStart="@+id/Server_button" />

    <Button
        android:id="@+id/BackM_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deviceListView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/buttons"
        android:text="Back to menu" />

    <ListView
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:id="@+id/deviceListView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnScan"
        android:layout_alignBottom="@+id/btnScan"
        android:layout_alignLeft="@+id/btnScan"
        android:layout_alignStart="@+id/btnScan"
        android:background="@drawable/buttons"
        android:text="Connect" />
    <Button
        android:id="@+id/btnStartGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/deviceListView"
        android:layout_toEndOf="@+id/deviceListView"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="50dp" />
</RelativeLayout>