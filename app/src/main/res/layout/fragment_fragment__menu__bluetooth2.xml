<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/btnVisListe"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:background="@drawable/buttons"
        android:text="Show Paired Devices"
        android:layout_alignBottom="@+id/Connect_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btnDiscover"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:background="@drawable/buttons"
        android:text="Discover"
        android:layout_alignTop="@+id/Server_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btnScan"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:background="@drawable/buttons"
        android:text="Scan"
        android:layout_alignBaseline="@+id/btnConnect"
        android:layout_alignBottom="@+id/btnConnect"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/BackM_button"
        android:layout_alignBottom="@+id/BackM_button"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttons"
        android:text="Back"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/Server_button"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:background="@drawable/buttons"
        android:text="Make a server"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/Connect_button"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttons"
        android:text="Connect to server"
        android:layout_alignLeft="@id/Server_button"
        android:layout_alignRight="@id/Server_button"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/Pair_button"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/buttons"
        android:text="Pair your bluetooth"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/Server_button"
        android:layout_alignStart="@+id/Server_button"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/BackM_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:text="Back to menu"
        android:layout_alignBottom="@+id/Pair_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:textColor="#000000"/>

    <ListView
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:id="@+id/deviceListView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:background="@drawable/buttons"
        android:text="Connect"
        android:layout_above="@+id/BackM_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btnStartGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:text="Start Game"
        android:layout_alignTop="@+id/Connect_button"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"/>
</RelativeLayout>